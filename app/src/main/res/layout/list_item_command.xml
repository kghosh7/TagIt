<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin">

        <ImageView
            android:id="@+id/system_command_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:alpha="0.6"
            android:clickable="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/system_command_title"
            android:paddingLeft="20dp"
            android:layout_alignTop="@+id/system_command_icon"
            android:layout_toRightOf="@+id/system_command_icon"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:id="@+id/system_command_desc"
            android:layout_below="@id/system_command_title"
            android:layout_toRightOf="@+id/system_command_icon"/>

    </RelativeLayout>
</RelativeLayout>